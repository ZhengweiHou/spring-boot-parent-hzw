<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:drools="http://drools.org/schema/drools-spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://drools.org/schema/drools-spring http://drools.org/schema/drools-spring.xsd">


	<drools:kbase id="route1">
		<drools:resources>
			<drools:resource source="classpath:drools/route1.xls" type="DTABLE">
				<drools:decisiontable-conf input-type="XLS" worksheet-name="S1"/>
			</drools:resource>
		</drools:resources>
		<drools:configuration>
			<drools:mbeans enabled="true" />
			<drools:event-processing-mode mode="STREAM" />
		</drools:configuration>
	</drools:kbase>
	
	
</beans>