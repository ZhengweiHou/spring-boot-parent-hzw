<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans default-lazy-init="false"
	   xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:batch="http://www.springframework.org/schema/batch"
	   xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
			http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		"
>

	<bean id="hReader" class="com.hzw.learn.springboot.batchbase.RPW.HReader"/>
	<bean id="hProdessor" class="com.hzw.learn.springboot.batchbase.RPW.HProdessor"/>
	<bean id="hWriter" class="com.hzw.learn.springboot.batchbase.RPW.HWriter"/>

	<bean id="zReader" class="com.hzw.learn.springboot.batchbase.RPW.ZReader"/>
	<bean id="zProdessor" class="com.hzw.learn.springboot.batchbase.RPW.ZProdessor"/>
	<bean id="zWriter" class="com.hzw.learn.springboot.batchbase.RPW.ZWriter"/>

	<bean id="hzwDecider" class="com.hzw.learn.springboot.batchbase.RPW.HZWDecider"/>

	<bean id="mapJopRepositoryFactory" class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean"/>

	<batch:job id="HZWjob" job-repository="mapJopRepositoryFactory">
		<batch:step id="hstep">
			<batch:tasklet>
				<batch:chunk reader="hReader" processor="hProdessor" writer="hWriter" commit-interval="10"/>
			</batch:tasklet>
		</batch:step>

<!--		<batch:decision id="decision1" decider="hzwDecider">-->
