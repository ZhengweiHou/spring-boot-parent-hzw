<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<!-- 控制台输出  -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
<!--		<encoder>-->
<!--			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] %logger{20} [%file:%line] - %msg%n</pattern>-->
<!--		</encoder>-->
		<encoder>
			<pattern>[%d{HH:mm:ss.SSS}] [%-5level] [%thread] %logger{20}:%line - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 日志级别定制 -->
	<logger name="com.hzw.learn.springboot"  level="DEBUG" />
	<logger name="org.springframework.batch" level="DEBUG" />


	
	<!-- 默认级别  -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>