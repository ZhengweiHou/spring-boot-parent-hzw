<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans default-lazy-init="false"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"

	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- Bean装配测试 -->

	<bean id="hello1" class="com.hzw.learn.springboot.springbase.springbean.hello.HelloImpl"/>

	<bean id="hello2" class="com.hzw.learn.springboot.springbase.springbean.hello.HelloImpl">
		<constructor-arg value="hello hzw!"/>
	</bean>

	<bean id="hello3" class="com.hzw.learn.springboot.springbase.springbean.hello.HelloImpl">
		<constructor-arg index="0" value="hello"/>
		<constructor-arg index="1" value="Mr ni!"/>
	</bean>

	<!-- 别名 -->
	<alias alias="helloalias1" name="hello1" />


</beans>
