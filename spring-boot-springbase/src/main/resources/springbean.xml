<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans default-lazy-init="false"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"

	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- Bean装配测试 -->
	<context:component-scan
		base-package="com.hzw.learn.springboot.springbase.springbean" />

	<bean id="cons1"
		class="com.hzw.learn.springboot.springbase.springbean.Cons1"></bean>
	<bean id="cons2"
		class="com.hzw.learn.springboot.springbase.springbean.Cons2"></bean>

	<bean id="testbean1"
		class="com.hzw.learn.springboot.springbase.springbean.TestBean">
		<constructor-arg value="HHH"/>
		<constructor-arg value="ZZZ"/>
		<constructor-arg ref="cons1"/>
		<constructor-arg ref="cons2"/>
	</bean>

	<bean id="testbean2"
		class="com.hzw.learn.springboot.springbase.springbean.TestBean"
		c:_0="aaa" 
		c:constr2="bbb" 
		c:cons1-ref="cons1" 
		c:_4-ref="cons2">
	</bean>
	<!-- 
	c:_0			第一个构造器参数 
	c:constr2		构造器参数名constr2
	c:cons1-ref		构造器参数名cons1，使用ref引用注入
	c:_4-ref		构造器第四个参宿，使用ref引用注入
	-->

</beans>
